    xmlns:maps="using:Windows.UI.Xaml.Controls.Maps"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <SplitView x:ConnectionId='1' Name="sv_Menu" DisplayMode="CompactOverlay" CompactPaneLength="50" OpenPaneLength="200">
            <SplitView.Pane>
                <StackPanel Background="Gray">
                    <Button x:ConnectionId='2' Name="b_back" FontFamily="Segoe MDL2 Assets" Content="&#xE0A6;" Width="48" Height="48" Background="Gray"                     />
                    <Button x:ConnectionId='3' Name="b_Hamburger" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" Width="48" Height="48" Background="Gray"                          />
                    <Button x:ConnectionId='4' Name="b_Edit" FontFamily="Segoe MDL2 Assets" Content="&#xE104;" Width="48" Height="48" Background="Gray" Visibility="Collapsed"                     />
                    <Button x:ConnectionId='5' Name="b_Delete" FontFamily="Segoe MDL2 Assets" Content="&#xE74D;" Width="48" Height="48" Background="Gray" Visibility="Collapsed"                       />
                    <TextBlock x:ConnectionId='6' Name="tblock_Welcome" FontSize="20" Padding="50 0 0 0"></TextBlock>
                    <ListView>
                        <ListViewItem x:ConnectionId='7' Name="LviMain" Content="Main" Padding="50 0 0 0"                           ></ListViewItem>
                        <ListViewItem x:ConnectionId='8' Name="lvi_myEvents" Content="My Events" Padding="50 0 0 0"                             ></ListViewItem>
                        <ListViewItem x:ConnectionId='9' Name="lvi_invites" Content="Invites" Padding="50 0 0 0"                           ></ListViewItem>
                        <ListViewItem x:ConnectionId='10' Name="lvi_Create" Content="Create Event" Padding="50 0 0 0"                           ></ListViewItem>
                        <ListViewItem x:ConnectionId='11' Name="lvi_Logout" Content="Logout" Padding="50 0 0 0"                           ></ListViewItem>
                    </ListView>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <StackPanel x:ConnectionId='12' Margin="48 0 0 0" Padding="10"                            Grid.Column="0">
                    <Button x:ConnectionId='13' x:Name="b_going" FontFamily="Segoe MDL2 Assets" Content="&#xE001;" Width="48" Height="48" Background="Gray"                       HorizontalAlignment="Right" Margin="0,0,3,0"/>
                    <TextBlock x:ConnectionId='14' x:Name="tblock_Users_Participating"  Grid.Column ="1" HorizontalAlignment="Right" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
                    <Button x:ConnectionId='15' x:Name="b_invite" FontFamily="Segoe MDL2 Assets" Content="&#xE8FA;" Width="48" Height="48" Background="Gray"                           HorizontalAlignment="Right" Margin="0,10,3,0" RenderTransformOrigin="3.267,0.667"/>
                    <TextBlock x:ConnectionId='16' x:Name="tblock_Title" TextWrapping="Wrap" HorizontalAlignment="Left" Grid.Column="0" Margin="0,-100,88,0" />
                    <TextBlock x:ConnectionId='17' x:Name="tblock_Title_value" TextWrapping="Wrap" HorizontalAlignment="Left"  FontSize="30"/>
                    <TextBlock x:ConnectionId='18' x:Name="tblock_Start_Date" TextWrapping="Wrap" Text="Start Date" HorizontalAlignment="Left" Margin="0,0,0,0" Height="20"/>
                    <TextBlock x:ConnectionId='19' x:Name="tblock_Start_Date_value" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="0,0,88,0" Height="20"/>
                    <TextBlock x:ConnectionId='20' x:Name="tblock_Start_Time" TextWrapping="Wrap" Text="Start Time" HorizontalAlignment="Left" Margin="0,0,88,0" Height="20"/>
                    <TextBlock x:ConnectionId='21' x:Name="tblock_Start_Time_value" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="0,0,88,0" Height="20"/>
                    <TextBlock x:ConnectionId='22' x:Name="tblock_End_Date" TextWrapping="Wrap" Text="End Date" HorizontalAlignment="Left" Margin="0,0,88,0" Height="20"/>
                    <TextBlock x:ConnectionId='23' x:Name="tblock_End_Date_value" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="0,0,88,0" Height="20"/>
                    <TextBlock x:ConnectionId='24' x:Name="tblock_End_Time" TextWrapping="Wrap" Text="End Time" HorizontalAlignment="Left" Margin="0,0,88,0" Height="20"/>
                    <TextBlock x:ConnectionId='25' x:Name="tblock_End_Time_value" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="0,0,88,0" Height="20"/>
                    <TextBlock x:ConnectionId='26' x:Name="tblock_Description" Text="Description" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="0,0,88,0" Height="20"/>
                    <TextBlock x:ConnectionId='27' x:Name="tblock_Description_value" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="0,0,88,0"/>

                    <Frame/>
                    <maps:MapControl x:ConnectionId='28' x:Name="MapControl" HorizontalAlignment="Center" Height="286" Width="314" MapServiceToken="qXGmhIw5FsDkOFhe9Kiu~jeFOhmzd_0JJIWkmDE7ALQ~Aj9YlKn3-rwHLxT_P2jY0-TIbpvgBlxH-cPTDXus16lzezQmApbNS7L1jLgSOr9w"/>
                    <TextBlock x:ConnectionId='29' x:Name="tblock_latitude"/>
                    <TextBlock x:ConnectionId='30' x:Name="tblock_longitude"/>
                </StackPanel>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

