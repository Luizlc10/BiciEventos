<Page
    x:Class="Teste_PAD.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Teste_PAD"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel x:ConnectionId='1' x:Name="stkPanel" Padding="0 50 0 0">
            <TextBlock x:ConnectionId='2' x:Name="tblock_Login" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Login" FontSize="32" Padding="0 50 0 0"/>
            <TextBlock x:ConnectionId='3' x:Name="tblock_Username" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Username" RenderTransformOrigin="0.582,1.8" Padding="0 50 0 0" />
            <TextBox x:ConnectionId='4' x:Name="tb_Username" HorizontalAlignment="Stretch" TextWrapping="Wrap" PlaceholderText="Username" RenderTransformOrigin="0.794,0.531" Margin="0 10 0 0"/>
            <TextBlock x:ConnectionId='5' x:Name="tblock_Password" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Password" Padding="0 10 0 0"/>
            <PasswordBox x:ConnectionId='6' x:Name="pb_Password" HorizontalAlignment="Stretch" PlaceholderText="Password" Margin="0 10 0 0" />
            <Button x:ConnectionId='7' x:Name="b_Login" Content="Login"  HorizontalAlignment="Stretch"                       Margin="0 50 0 0"/>
        <Button x:ConnectionId='8' x:Name="b_Register" Content="Register" HorizontalAlignment="Stretch"                         />
        <Frame x:ConnectionId='9' Name="MyFrame">
        </Frame>
        </StackPanel>
    </Grid>
</Page>

