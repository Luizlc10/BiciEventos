<Page
    x:Class="Teste_PAD.Invites"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Teste_PAD"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView x:ConnectionId='1' Name="sv_Menu" DisplayMode="CompactOverlay" CompactPaneLength="50" OpenPaneLength="200">
            <SplitView.Pane>
                <StackPanel Background="Gray">
                    <Button x:ConnectionId='2' Name="b_Hamburger" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" Width="48" Height="48" Background="Transparent"                           HorizontalAlignment="Right" Margin="0,0,152,0"/>
                    <ListView>
                        <ListViewItem x:ConnectionId='3' Name="LviMain" Content="Main" Padding="50 0 0 0"                           ></ListViewItem>
                        <ListViewItem x:ConnectionId='4' Name="lvi_myEvents" Content="My Events" Padding="50 0 0 0"                             ></ListViewItem>
                        <ListViewItem x:ConnectionId='5' Name="lvi_invites" Content="Invites" Padding="50 0 0 0"                           ></ListViewItem>
                        <ListViewItem x:ConnectionId='6' Name="lvi_Create" Content="Create Event" Padding="50 0 0 0"                           ></ListViewItem>
                        <ListViewItem x:ConnectionId='7' Name="lvi_Logout" Content="Logout" Padding="50 0 0 0"                           ></ListViewItem>
                    </ListView>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <StackPanel x:ConnectionId='8'                           >
                    <TextBlock x:ConnectionId='9' Name="tblock_Title" HorizontalAlignment="Center" FontSize="30" Margin="0 30 0 0" Text="Invites"/>
                    <TextBlock x:ConnectionId='10' Name="tblock_EventId" Visibility="Collapsed"></TextBlock>
                    <TextBox x:ConnectionId='11' Name="tb_Search" HorizontalAlignment="Stretch" TextWrapping="Wrap" PlaceholderText="Type here" Margin="0 10 0 0"/>
                    <ScrollViewer VerticalScrollBarVisibility="Visible">
                        <ListBox x:ConnectionId='12' x:Name="lb_Events" HorizontalAlignment="Stretch" Margin="0 50 0 0"                                               />
                    </ScrollViewer>
                </StackPanel>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

